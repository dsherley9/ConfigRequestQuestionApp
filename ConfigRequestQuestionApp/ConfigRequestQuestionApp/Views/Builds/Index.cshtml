@using ConfigRequestQuestionApp.Models;
@model List<Build>

@{
    ViewBag.Title = "Builds";
}
<div id="build-view-container" class="view-body-container row position-static">
    <div class="col-8 col-centered view-body-inner">
        <div class="row build-view-head">
            <h2>Builds</h2>
        </div>
        <div class="row build-view-options">
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <table id="myTable" class="table table-striped table-bordered table-hover" style="width:100%">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        <div class="row myTable-column-header">Build ID</div>
                                        <div class="row myTable-column-filter"></div>
                                    </th>
                                    <th>
                                        <div class="row myTable-column-header">Build Name</div>
                                        <div class="row myTable-column-filter"></div>
                                    </th>
                                    <th>
                                        <div class="row myTable-column-header">Solution</div>
                                        <div class="row myTable-column-filter"></div>
                                    </th>
                                    <th>
                                        <div class="row myTable-column-header">Current Version</div>
                                        <div class="row myTable-column-filter"></div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Build item in Model)
                                {
                                    <tr data-request-url="@Url.Action("build", "Builds",new { id = @item.BuildID })">
                                        <td>@item.BuildID</td>
                                        <td>@item.CurrentBuildName</td>
                                        <td>@item.CurrentSolution</td>
                                        <td>@item.CurrentVersion</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/Builds/Index")
}



